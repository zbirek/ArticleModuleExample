}
{capture $url}{link //Article:default $article->uri()}{/capture}

{block content}
<div class="container subpage">
    <div class="row">
        <div class="col-md-3">
            {if $article->match()}
                <div class="box">
                    <div class="box-primary"></div>
                        <div class="box-content">
                                {$matchInfo($article->match()->id())}
                                {control matchInfo:widget}
                        </div>
                </div>
            {else}
                {control articleList:widget}
            {/if}
        </div>

        <div class="col-md-9">
         <section id="article">

                <div class="news-item">
                        <span class="bg"></span>
                        <img src="/min.php?file={$basePath}/storage/{$article->image()}&exact&w=1170&h=600"
