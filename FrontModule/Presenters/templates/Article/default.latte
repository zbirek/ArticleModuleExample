                </div>
                <div class="article-text">
                    <div class="subtitle">{$article->subtitle()}</div>
                    <h2>{$article->title()}</h2>
                    <p><strong>{$article->perex()}</strong></p>

                    {if $article->match()}
                        {$matchInfo($article->match()->id())}
                        {control matchInfo:text}
                    {/if}

                    {$article->content()|noescape}
                </div>

             <div class="article-footer">
                 <div class="row">
                     <div class="article-info">
                         <div class="col-md-8">
                         <strong>Datum vydání: </strong>{$article->releaseDate()|date:"j.n.Y"} | <strong>Autor:</strong> {$article->author()}
                         </div>
                     </div>
                     <div class="col-md-4">
                         <div class="share pull-right">
                             {*
                             <a href="" class=""><span class="fa fa-facebook"></span></a>
